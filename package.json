{
  "name": "codex-workspace",
  "displayName": "%displayName%",
  "description": "%description%",
  "publisher": "Knworks",
  "icon": "images/codex-workspace.png",
  "repository": "https://github.com/Knworks/codex-workspace",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codex-workspace.core",
    "onView:codex-workspace.prompts",
    "onView:codex-workspace.skills",
    "onView:codex-workspace.templates",
    "onView:codex-workspace.mcp"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codex-workspace",
          "title": "%viewContainer.codexWorkspace.title%",
          "icon": "images/sidebar.png"
        }
      ]
    },
    "views": {
      "codex-workspace": [
        {
          "id": "codex-workspace.core",
          "name": "%view.core.name%"
        },
        {
          "id": "codex-workspace.prompts",
          "name": "%view.prompts.name%"
        },
        {
          "id": "codex-workspace.skills",
          "name": "%view.skills.name%"
        },
        {
          "id": "codex-workspace.templates",
          "name": "%view.templates.name%"
        },
        {
          "id": "codex-workspace.mcp",
          "name": "%view.mcp.name%"
        }
      ]
    },
    "commands": [
      {
        "command": "codex-workspace.helloWorld",
        "title": "%command.helloWorld%"
      },
      {
        "command": "codex-workspace.openFile",
        "title": "%command.openFile%"
      },
      {
        "command": "codex-workspace.openPromptsFolder",
        "title": "%command.openCodexFolder%",
        "icon": "$(folder-opened)"
      },
      {
        "command": "codex-workspace.openSkillsFolder",
        "title": "%command.openCodexFolder%",
        "icon": "$(folder-opened)"
      },
      {
        "command": "codex-workspace.openTemplatesFolder",
        "title": "%command.openCodexFolder%",
        "icon": "$(folder-opened)"
      },
      {
        "command": "codex-workspace.refreshAll",
        "title": "%command.refresh%",
        "icon": "$(refresh)"
      },
      {
        "command": "codex-workspace.addFile",
        "title": "%command.addFile%",
        "icon": "$(new-file)"
      },
      {
        "command": "codex-workspace.addFolder",
        "title": "%command.addFolder%",
        "icon": "$(new-folder)"
      },
      {
        "command": "codex-workspace.rename",
        "title": "%command.rename%",
        "icon": "$(edit)"
      },
      {
        "command": "codex-workspace.delete",
        "title": "%command.delete%",
        "icon": "$(trash)"
      },
      {
        "command": "codex-workspace.mcp.toggle",
        "title": "%command.mcp.toggle%"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codex-workspace.addFolder",
          "when": "view == 'codex-workspace.prompts' || view == 'codex-workspace.skills' || view == 'codex-workspace.templates'",
          "group": "navigation@1"
        },
        {
          "command": "codex-workspace.addFile",
          "when": "view == 'codex-workspace.prompts' || view == 'codex-workspace.skills' || view == 'codex-workspace.templates'",
          "group": "navigation@2"
        },
        {
          "command": "codex-workspace.delete",
          "when": "view == 'codex-workspace.prompts' || view == 'codex-workspace.skills' || view == 'codex-workspace.templates'",
          "group": "navigation@3"
        },
        {
          "command": "codex-workspace.rename",
          "when": "view == 'codex-workspace.prompts' || view == 'codex-workspace.skills' || view == 'codex-workspace.templates'",
          "group": "navigation@4"
        },
        {
          "command": "codex-workspace.refreshAll",
          "when": "view == 'codex-workspace.prompts' || view == 'codex-workspace.skills' || view == 'codex-workspace.templates'",
          "group": "navigation@5"
        },
        {
          "command": "codex-workspace.openPromptsFolder",
          "when": "view == 'codex-workspace.prompts'",
          "group": "navigation@6"
        },
        {
          "command": "codex-workspace.openSkillsFolder",
          "when": "view == 'codex-workspace.skills'",
          "group": "navigation@6"
        },
        {
          "command": "codex-workspace.openTemplatesFolder",
          "when": "view == 'codex-workspace.templates'",
          "group": "navigation@6"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "toml": "^3.0.0",
    "vscode-nls": "^5.2.0"
  }
}
